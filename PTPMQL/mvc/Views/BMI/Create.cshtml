@model mvc.Models.BMI

<h2>Tính chỉ số BMI</h2>

<form method="post" asp-action="Calculate">
    <label for="Weight">Cân nặng (kg):</label>
    <input type="number" step="0.1" id="Weight" name="Weight" value="@Model?.Weight" required />

    <label for="Height">Chiều cao (m):</label>
    <input type="number" step="0.01" id="Height" name="Height" value="@Model?.Height" required />

    <button type="submit">Tính toán</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
